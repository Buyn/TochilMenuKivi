#:kivy 1.0
# * <Interface>: :
# ** ---<Interface>:-------------------------------:
<Interface>:
    ScreenManager:
        MainScreen:
            name: "mainmenu" 
        SharpScreen:
            name: "sharpmenu" 


# * <MainScreen>: :
# ** ------------------MainScreen----------------:
<MainScreen>:
    label_timeid: curent_time_label
    label_dateid: curent_date_label
    BoxLayout:
        orientation: 'horizontal'

# ** BoxLayout Sharping : 
        BoxLayout:
            orientation: 'vertical'
            padding: 50

            Button:
                text: 'Start Sharpening' 
                on_press:  root.manager.current = 'sharpmenu'


            Button:
                # text: 'Repit Last' + root.info
                text: 'Repit Last'
                on_press: root.do_action()

# ** BoxLayout Radio Asistent : 
        BoxLayout:
        # FloatLayout:
            orientation: 'vertical'
            # orientation: 'horizontal'
            padding: 50

            Button:
                text: 'Google Asistent' 
                on_press: root.do_action()

            Button:
                # text: 'Radio' + root.info
                text: 'Radio'
                on_press: root.do_action()

            Label:
                id: curent_date_label
                text: 'Augus/25/2020'

            Label:
                id: curent_time_label
                text: root.info

            Button:
                text: 'Options' 
                on_press: root.do_action()

# ** ----------------------------------------------:


# * <SharpScreen>: :
# ** ------------------SharpScreen----------------:
<SharpScreen>:
    label_timeid: curent_time_label
    label_dateid: curent_date_label
    BoxLayout:
        # orientation: 'horizontal'
        orientation: 'vertical'


# ** BoxLayout Sharping : 
        BoxLayout:
            # orientation: 'vertical'
            orientation: 'horizontal'
            padding: 50

            Button:
                text: 'Full Cicle' 
                on_press: root.do_action()

            Button:
                # text: 'Repit Last' + root.info
                text: 'Midle Cicle'
                on_press: root.do_action()


# ** BoxLayout Radio Asistent : 
        BoxLayout:
        # FloatLayout:
            orientation: 'vertical'
            # orientation: 'horizontal'
            padding: 50

            Button:
                text: 'Left ' 
                on_press: root.do_action()

            Button:
                # text: 'Radio' + root.info
                text: 'Right'
                on_press: root.do_action()

            Label:
                id: curent_date_label
                text: 'Augus/25/2020'

            Label:
                id: curent_time_label
                text: root.info

            Button:
                text: 'Back' 
                on_press: root.do_action()

# ** ----------------------------------------------:
