# * <StartSharpPopup@Popup>: : 
<StartSharpPopup@Popup>:
    title: "Conform to Start"
    # auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        # orientation: 'horizontal'
        padding: 20
        
        Label:
            text: 'Conform start of knife sharpening'

        BoxLayout:
            # orientation: 'vertical'
            orientation: 'horizontal'
            padding: 10
            Button:
                text: 'Start!'
                on_release: root.dismiss()
            Button:
                text: 'Abort!'
                on_release: root.dismiss()

